<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElsieBudget.Views.BudgetPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="BudgetText"
                  Placeholder="Enter your monthly budget."
                  HeightRequest="100"
                    />
            <Grid>
               
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                  
                </Grid.RowDefinitions>

                <Button 
                        x:Name="BudgetSave" Text="Save"
                    Clicked="BudgetSave_Clicked_1"  FontSize="10"/>
                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>